                                        </li>
                                        <li class="{{active == 'hasil-seleksi' ? 'active' : ''}}">
                                            <a href="{{base_url()}}/hasil-seleksi">
                                                Lihat Hasil Seleksi 
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                {# <li>
                                    <a href="/">
                                        INFO LANJUT   
                                    </a>
                                </li> #}
                            </ul>
                            <div style="margin-left: 15px;">
                                <a href="{{base_url()}}/pendaftaran">
                                    <button class="btn btn-main">
                                        Daftar Sekarang
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
