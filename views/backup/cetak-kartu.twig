{% extends "layout.twig" %}

{% block content %}
<div class="containerjoy" style="min-height:65vh">
	<div class="card">
	  <div class="card-header">
	    <b>CETAK KARTU UJIAN.</b>
	  </div>
	  <div class="card-body">
  	  	<form class="input-group mb-3" method="GET" action="{{base_url()}}/cetak-kartu-s">
            <input name="q" type="text" class="form-control" placeholder="Cari berdasarkan nama / nik / nisn" value="{{value}}">
		  	<div class="input-group-append">
			    <button class="btn btn-info" type="submit"><i class="fa fa-search"></i></button>
			</div>
    	</form>
	  	<table class="table table-bordered table-sm table-hover">
		    <thead>
		      <tr>
		        <th>No. Ujian</th>
		        <th>Nama</th>
		        <th>No. Ruangan</th>
		        <th>No. Bangku</th>
		        <th>Gelombang</th>
		        <th>Action</th>
		      </tr>
		    </thead>
		    <tbody>
		      {% for data in datas %}
		      	<tr>
		      		<td>{{data.no_kartu}}</td>
			        <td>{{data.nama}}</td>
			        <td>{{data.no_ruangan}}</td>
			        <td>{{data.no_bangku}}</td>
			        <td>{{data.gelombang}}</td>
			        <td style="padding:0px 5px;width:140px">
			        	<a href="{{base_url()}}/list-pendaftar-detail/{{data.id_pendaftaran}}" class="btn btn-success btn-sm" style="padding:0px 10px;">Detail</a>
			        	<a target="_blank" href="{{base_url()}}/h312ud1/cetak.php?id={{data.id_pendaftaran}}&no_ujian={{data.no_kartu}}" class="btn btn-primary btn-sm" style="padding:0px 10px;">Cetak</a>
			        </td>
			    </tr>
		      {% endfor %}
		    </tbody>
		</table>
		{% if needed %}
			<nav aria-label="Page navigation example">
			  <ul class="pagination">
			  	{% for i in 1..lastpage %}
	              	{% if i == page %}
	              		<li class="page-item active"><a class="page-link" href>{{i}}</a></li>
	              	{% else %}
	              		<li class="page-item"><a class="page-link" href="{{base_url()}}/cetak-kartu?page={{i}}">{{i}}</a></li>
	              	{% endif %}
	            {% endfor %}
			  </ul>
			</nav>
        {% endif %}
	  </div>
	</div>
</div>
{% endblock content %}